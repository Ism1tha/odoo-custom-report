<odoo>
    <record id="action_custom_sale_order_report" model="ir.actions.report">
        <field name="name">Custom Sale Order Report</field>
        <field name="model">sale.order</field>
        <field name="report_type">qweb-pdf</field>
        <field name="report_name">custom-report.report_custom_sale_order</field>
        <field name="report_file">custom-report.report_custom_sale_order</field>
        <field name="print_report_name">(object.name or '').replace('/', '-') + ' - Offers'</field>
        <field name="binding_model_id" ref="model_sale_order"/>
        <field name="binding_type">report</field>
    </record>
</odoo>