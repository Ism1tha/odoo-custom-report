<odoo>
  <template id="report_custom_sale_order">
    <t t-call="web.html_container">
      <t t-foreach="docs" t-as="order">
        <t t-call="web.external_layout">
          <div class="page">
            <h2>Commercial information report</h2>
            <p>Order Reference: <t t-esc="order.name"/></p>
            <p>Commercial Name: <t t-esc="order.commercial_name"/></p>
            <p>Order Status: <t t-esc="order.state"/></p>
            <t t-if="order.commercial_name and order.state">
              <ul>
                <li>Number of orders for <t t-esc="order.commercial_name"/> in state "<t t-esc="order.state"/>": <t t-esc="order.state_count"/></li>
                <li>Total amount of orders for <t t-esc="order.commercial_name"/> in state "<t t-esc="order.state"/>": <t t-esc="order.total_amount"/></li>
              </ul>
            </t>
            </div>
        </t>
      </t>
    </t>
  </template>
</odoo>